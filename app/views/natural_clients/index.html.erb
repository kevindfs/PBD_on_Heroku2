<div class="container marg2">
    <br>
    <br><br>
        <div class="row">
            <div class="col-lg-12 ">

<% if user_signed_in? and current_user.tipo == 'administrador' %>

  <h1>Listado de clientes naturales</h1>

   <div class="panel panel-default">
      <!-- Default panel contents -->
      <div class="panel-heading">Lista de clientes naturales</div>
      <div class="panel-body">
        <p class="center"> En esta sección es posible modificar a los clientes naturales, que representan a los usuarios habituales del sistema.<br>
        
        </p>
      </div>

      <!-- Table -->
      <table class="table">

      <thead>
        <tr>
          <th>Rut cliente</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

    <tbody>
      <% @natural_clients.each do |natural_client| %>
        <tr>
          <td><%= natural_client.run_cli %></td>
          <td><%= button_to 'Ver', natural_client , :method => 'get', :class => 'btn btn-info'%></td>
          <td><%= button_to 'Editar', edit_natural_client_path(natural_client) , :method => 'get', :class => 'btn btn-warning'%></td>
          <td><%= button_to 'Eliminar', natural_client, method: :delete, data: { confirm: '¿Confirma eliminación?' }, :class => 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= button_to 'Nuevo', new_natural_client_path , :method => 'get', :class => 'btn btn-default' %>

<% end %>
</div></div></div></div>
