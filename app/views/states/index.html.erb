<div class="container marg2">
    <br>
    <br><br>
        <div class="row">
            <div class="col-lg-12 ">

<h1>Lista de estados</h1>

  <div class="panel panel-default">
      <!-- Default panel contents -->
      <div class="panel-heading">Lista de alertas de revisión técnica</div>
      <div class="panel-body">
        <p class="center"> En esta sección es posible modificar los estados.<br>
        
        </p>
      </div>

      <!-- Table -->
      <table class="table">

  <thead>
    <tr>
      <th>Nombre de estado</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td><%= state.nom_est %></td>
        <td><%= button_to 'Ver', state , :method => 'get', :class => 'btn btn-info'%></td>
        <td><%= button_to 'Editar', edit_state_path(state) , :method => 'get', :class => 'btn btn-warning'%></td>
        <td><%= button_to 'Eliminar', state, method: :delete, data: { confirm: '¿Confirma eliminación?' } , :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'Nuevo', new_state_path  , :method => 'get', :class => 'btn btn-default'%>
