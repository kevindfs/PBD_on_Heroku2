						      <!-- Default panel contents -->
						      <div class="panel-heading">Lista de solicitudes de viajes</div>


						      <!-- Table -->
						      <table class="table">
						  <thead>
						    <tr>
						      <th>Rut conductor</th>
						      <th>Id sol.</th>
