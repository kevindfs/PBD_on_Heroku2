						      <table class="table">
						  <thead>
						    <tr>
						      <th>Id viaje</th>
						      <th>Dirección origen</th>
						      <th>Dirección destino</th>
						    </tr>
						  </thead>

						  <tbody>




						<% @travel_requests.each do |tr| %>	
					      <tr>
					        <td><%= tr.id_trav_req %></td>
					        <td><%= tr.dir_orig_sol%></td>
					        <td><%= tr.dir_dest_sol%></td>
